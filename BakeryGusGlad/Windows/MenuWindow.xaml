<Window x:Class="BakeryGusGlad.Windows.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BakeryGusGlad.Windows"
        mc:Ignorable="d"
        Title="MenuWindow" 
        Height="450" 
        Width="800">
    <Grid>
        <StackPanel>

            <TextBlock x:Name="TbUser" 
                   Text="Пользователь"
                   HorizontalAlignment="Right"
                   Margin="10"/>

            <Button
                Width="150"
                Content="Список товаров"
                Height="30"
                Margin="0 100 0 0"
                Click="Button_Click_1"
                Cursor="Hand"/>
            
            <Button
                Width="150"
                Content="Список сотрудников"
                Height="30"
                Margin="0 30 0 0"
                Click="Button_Click"
                Cursor="Hand"/>

        </StackPanel>
    </Grid>
</Window>
